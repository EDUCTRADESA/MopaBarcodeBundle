<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    
    <parameters>
        <parameter key="mopa_barcode.barcode_service.class">Mopa\BarcodeBundle\Model\BarcodeService</parameter>
    </parameters>

    <services>
        <service id="mopa_barcode.barcode_service" class="%mopa_barcode.barcode_service.class%">
            <argument type="service" id="imagine" />
            <argument>%kernel.root_dir%</argument>
            <argument type="service" id="logger" />
            <tag name="monolog.logger" channel="mopa_barcode" />
        </service>
    </services>
    
</container>
